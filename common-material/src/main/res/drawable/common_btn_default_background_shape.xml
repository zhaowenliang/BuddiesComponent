<?xml version="1.0" encoding="utf-8"?>
<!-- 默认按钮点击背景形状 -->
<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:insetLeft="@dimen/common_button_inset_horizontal"
    android:insetTop="@dimen/common_button_inset_vertical"
    android:insetRight="@dimen/common_button_inset_horizontal"
    android:insetBottom="@dimen/common_button_inset_vertical">
    <shape
        android:shape="rectangle"
        android:tint="?attr/colorPrimary">
        <corners android:radius="@dimen/common_button_corner_small" />
        <solid android:color="@android:color/white" />
        <padding
            android:bottom="@dimen/common_button_padding_vertical"
            android:left="@dimen/common_button_round_padding_horizontal"
            android:right="@dimen/common_button_round_padding_horizontal"
            android:top="@dimen/common_button_padding_vertical" />
    </shape>
</inset>
