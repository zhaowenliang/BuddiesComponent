<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/title_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorPrimary"
    android:theme="@style/AppTheme.AppBarOverlay.Dark"
    app:popupTheme="@style/AppTheme.PopupOverlay.Light"
    tools:navigationIcon="?attr/homeAsUpIndicator"
    tools:titleText="标题" />

<!-- background：设置标题栏颜色为主题色 -->
<!-- theme：应用主题是浅色主题，所以标题栏默认也是浅色主题，此处使用深色标题栏。（深色标题栏文字颜色为浅色） -->
<!-- popupTheme：应用主题是浅色主题，所以标题栏弹窗是深色主题，此处使用浅色弹窗菜单 -->

