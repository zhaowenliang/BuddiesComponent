<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 深色标题栏主题 -->
    <style name="AppTheme.AppBarOverlay.Dark" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- 标题栏弹窗浅色主题 -->
    <style name="AppTheme.PopupOverlay.Light" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Toast文字样式 -->
    <style name="CustomToastTextStyle" parent="TextAppearance.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Loading Dialog -->
    <style name="CustomLoadingDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

</resources>