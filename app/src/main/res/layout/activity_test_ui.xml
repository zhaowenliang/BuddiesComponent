<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <cc.buddies.component.common.view.CustomTitleBar
        android:id="@+id/custom_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:maxButtonHeight="?attr/actionBarSize" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试" />

        <Button
            style="@style/Common.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试" />

        <Button
            style="@style/Common.Button.Colored.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试" />

        <Button
            style="@style/Common.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试" />

        <Button
            style="@style/Common.Button.Borderless.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试" />

        <Button
            style="@style/Common.RoundButton.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试" />

        <Button
            style="@style/Common.RoundButton.Colored.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试" />

        <Button
            style="@style/Common.RoundButton.Colored.Outlined"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试" />

        <Button
            style="@style/Common.RoundButton.Colored.Outlined.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试" />

        <FrameLayout
            android:id="@+id/aaaa"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:foreground="@drawable/common_default_dark_selectable"
            android:padding="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="1111111111" />

        </FrameLayout>

    </LinearLayout>

</LinearLayout>